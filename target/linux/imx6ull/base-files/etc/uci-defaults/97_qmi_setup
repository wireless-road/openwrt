#!/bin/sh

. /lib/functions/uci-defaults.sh

board=$(board_name)

board_config_update

case "$board" in
gs | lorawan_gateway_3g)
    uci set network.wwan=interface
    uci set network.wwan.ifname='wwan0'
    uci set network.wwan.proto='qmi'
    uci set network.wwan.device='/dev/cdc-wdm0'
    uci set network.wwan.apn='internet'
    uci set network.wwan.auth='none'
    uci set network.wwan.ifname='wwan0'
    uci set network.wwan.autoconnect='1'
    uci set network.wwan.delay='10'
    uci set network.wwan.timeout='60'
    ;;

*)
    ;;

esac

uci commit;

board_config_flush

exit 0
